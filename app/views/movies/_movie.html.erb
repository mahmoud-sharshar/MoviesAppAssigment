<div id="<%= dom_id movie %>" class="movie-card">
  <div class="movie-card-header">
    <h2><%= movie.name %></h2>
    <p>
      <% if request.path != movie_path(movie) %>
        <%= link_to "Show this movie", movie, class: "movie-button" %>
      <% end %>
    </p>
  </div>

  <div class="movie-card-body">
    <p><strong>Rating:</strong> <%= movie.average_stars %></p>
    <p><strong>Description:</strong> <%= movie.description %></p>
    <p><strong>Year:</strong> <%= movie.year %></p>
    <p><strong>Director:</strong> <%= movie.director.name %></p>
    <p><strong>locations:</strong> <%= movie.locations.map{|m| "#{m.city}, #{m.country}"}.uniq.join(" & ") %></p>
    <p><strong>Actors:</strong> <%= movie.actors.pluck(:name).uniq.join(", ") %></p>
  </div>
</div>